<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
>
    
    <ImageView
        android:id="@+id/corner_op_logo"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_margin="10dip"
    	android:visibility="gone"
    />
    
	<TextView
    	android:id="@+id/setting_list_item_text"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:textColor="@color/black"
	   	android:textSize="16sp"
	   	android:layout_margin="10dip"
    />
	
	<TextView
    	android:id="@+id/setting_list_text_value"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:textColor="@color/grey"
    	android:layout_gravity="left|center"
	   	android:textSize="15sp"
	   	android:paddingLeft="5dip"
	   	android:layout_weight="1.0"
    />
	
	<TextView
    	android:id="@+id/setting_list_op_value"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:textColor="@color/grey"
	   	android:textSize="15sp"
	   	android:paddingRight="5dip"
	   	android:visibility="gone"
    />
	
	<ImageView
        android:id="@+id/corner_big_pic"
    	android:layout_width="55dip"
    	android:layout_height="55dip"
    	android:layout_margin="10dip"
    	android:visibility="gone"
    />
	
    <ImageView 
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:background="@drawable/submenu_right"
    	android:layout_margin="10dip"
    	android:layout_gravity="right|center"
    />
</LinearLayout>