<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/group_select_title_bar"
   	android:layout_width="fill_parent"
   	android:layout_height="wrap_content"
   	android:paddingLeft="2dip"
   	android:paddingRight="2dip"
   	android:gravity="center_vertical"
   	android:orientation="horizontal"
   	android:background="@drawable/widget_bar_bg_p">
   	
    <TextView
		android:id="@+id/group_select_cancel"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:textColor="@color/white"
		android:textSize="18sp"
		android:clickable="true"
		android:ellipsize="end"
		android:background="@drawable/opt_back_selector"
		android:layout_gravity="center_vertical|left"
		android:text="@string/group_select_cancel"
	/>
    
    <TextView
		android:id="@+id/group_select_title_content"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:textSize="20sp"
		android:ellipsize="end"
		android:background="@null"
		android:textColor="#f5f5f5"
		android:layout_gravity="center"
		android:text="@string/group_select_title"
	/>
    
    <Button
        android:id="@+id/group_select_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:textColor="@color/white"
		android:textSize="18sp"
		android:ellipsize="end"
        android:layout_gravity="center_vertical|right"
        android:text="@string/group_select_start" />
        <!-- android:background="@drawable/opt_forward_selector" -->
        

</FrameLayout>