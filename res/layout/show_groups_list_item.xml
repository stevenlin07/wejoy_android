<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
	android:layout_height="fill_parent"
>
    <!-- 首字母 -->
    <TextView
        android:id="@+id/alpha"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mm_contact_title"
        android:paddingLeft="5dip"
        android:textColor="@color/graywhite"
        android:textSize="14sp"
        android:visibility="gone" 
        android:layout_gravity="center_vertical"/>
    
    <LinearLayout
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_below="@id/alpha">
	    <!-- 联系人信息 -->
	    <ImageView
	        android:id="@+id/contactFace"
	        android:adjustViewBounds="true"
	        android:layout_width="55.0dip"
		    android:layout_height="55.0dip"
	        android:paddingLeft="14dip"
	        android:src="@drawable/ic_launcher" 
	        android:layout_gravity="center_vertical"
	       />
	
	    <TextView
	        android:id="@+id/name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	       	android:paddingLeft="10dip"
	        android:singleLine="true"
		    android:textSize="@dimen/text_size_15"
		    android:textColor="@color/listitem_black"
		    android:layout_gravity="center_vertical"
		    android:layout_weight="1"
	        />
	    
	    <Button android:id="@+id/contact_cb"
	        android:layout_width="30dip"
	        android:layout_height="30dip"
	        android:focusable="false"
	        android:focusableInTouchMode="false" 
	        android:layout_gravity="center_vertical"
	        android:layout_marginRight="25dip"
	        android:background="@drawable/btn_check_on_normal"
	        />
    </LinearLayout>

</RelativeLayout>